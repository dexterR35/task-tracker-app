{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/[^.]+$",
      "dest": "/index.html"
    },
    {
      "src": "/(assets|static|images|fonts)/(.+)",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      },
      "continue": true
    },
    {
      "src": "/(.+)",
      "dest": "/$1"
    }
  ]
}