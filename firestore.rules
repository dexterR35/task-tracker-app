rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Global collections (users, reporters)
    match /users/{userId} {
      allow read, write, create, update, delete: if request.auth != null;
    }
    
    match /reporters/{reporterId} {
      allow read, write, create, update, delete: if request.auth != null;
    }
    
    // Department-based tasks structure
    // Allow authenticated users to access - application handles specific permissions
    match /departments/{departmentId}/{yearId}/{monthId} {
      allow read, write, create, update, delete: if request.auth != null;
      
      match /taskdata/{taskId} {
        // Allow authenticated users - application enforces permissions based on user.permissions array
        allow read, write, create, update, delete: if request.auth != null;
      }
    }
    
    // Fallback for any other documents
    match /{document=**} {
      allow read, write, create, update, delete: if request.auth != null;
    }
  }
}